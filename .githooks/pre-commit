#!/bin/bash
# Pre-commit hook for Go code quality
# Runs golangci-lint using project policy configuration
# Installed via: make hooks

set -e

echo "üîç Running pre-commit lint check..."

# Check if golangci-lint is installed
if ! command -v golangci-lint &> /dev/null; then
    echo ""
    echo "‚ùå golangci-lint not found. Please install it:"
    echo "   go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest"
    exit 1
fi

# Get list of staged Go files
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$' || true)

# Skip if no Go files staged
if [ -z "$STAGED_GO_FILES" ]; then
    echo "‚úì No Go files staged, skipping lint check."
    exit 0
fi

# Run golangci-lint with policy config
# Optimization: Only check for new issues in changed code relative to HEAD
if ! golangci-lint run --config policy/golangci.yml --new-from-rev=HEAD ./...; then
    echo ""
    echo "‚ùå Lint check failed. Please fix the violations above before committing."
    echo "   Run 'make lint' to see all issues."
    exit 1
fi

echo "‚úì Lint check passed!"
exit 0
