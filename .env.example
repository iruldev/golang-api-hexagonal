# golang-api-hexagonal Configuration
# This file documents available environment variables.
# The service reads directly from the process environment; it does NOT auto-load a `.env` file.

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Database connection string (PostgreSQL)
# Format: postgres://user:password@host:port/dbname?sslmode=disable
DATABASE_URL=postgres://postgres:postgres@localhost:5432/golang_api_hexagonal?sslmode=disable

# =============================================================================
# OPTIONAL CONFIGURATION (defaults shown)
# =============================================================================

# HTTP server port
PORT=8080

# Logging level: debug, info, warn, error
LOG_LEVEL=info

# Environment: development, staging, production, test
ENV=development

# Service name for observability
SERVICE_NAME=golang-api-hexagonal

# =============================================================================
# ERROR RESPONSE CONFIGURATION (RFC 7807)
# =============================================================================

# Base URL for RFC 7807 problem type URIs.
# Must be an absolute URL and end with a trailing slash.
PROBLEM_BASE_URL=https://api.example.com/problems/

# =============================================================================
# OPENTELEMETRY CONFIGURATION (optional)
# =============================================================================

# Enable OpenTelemetry tracing
OTEL_ENABLED=false

# OTLP exporter gRPC endpoint (e.g., Jaeger, Tempo, Zipkin with OTLP)
OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317

# Use plaintext connection to the OTLP endpoint (set to true for local dev without TLS)
OTEL_EXPORTER_OTLP_INSECURE=false

# =============================================================================
# HTTP REQUEST LIMITS
# =============================================================================

# Maximum request body size in bytes (default: 1048576 bytes = 1MB)
MAX_REQUEST_SIZE=1048576

# =============================================================================
# JWT AUTHENTICATION (optional)
# =============================================================================

# Enable JWT authentication for protected endpoints
JWT_ENABLED=false

# JWT signing secret (required if JWT_ENABLED=true)
# Should be at least 32 bytes for HS256 security
JWT_SECRET=your-super-secret-key-at-least-32-bytes

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Rate limit in requests per second (default: 100)
RATE_LIMIT_RPS=100

# Trust X-Forwarded-For/X-Real-IP headers for client IP detection
# Only enable when behind a trusted reverse proxy (default: false)
TRUST_PROXY=false

